<%- include ("../partials/header")%>

    <div class="container">
        <div class="row">
            <div style="margin: 0 auto">
                <h3 class="mt-2">Edit Comment
                </h3>
                <div class="mt-5" style="width: 70%; margin: 0 auto;">
                    <form action="/campgrounds/<%= campground_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
                        <div class="form-group">
                            <input class="form-control" type="text" name="text" value="<%=comment.text%>">
                        </div>
                        <button class="btn btn-large btn-primary btn-block">Update</button>
                    </form>
                    <a href="/campgrounds/<%=campground_id%>">Go Back</a>
                </div>


            </div>

        </div>
    </div>





