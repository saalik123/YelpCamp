<%- include ("../partials/header")%>

    <div class="container">
        <div class="row">
            <div style="margin: 0 auto">
                <h1 class="mt-2">Edit
                    <%=campground.name %>
                </h1>
                <div class="mt-5" style="width: 70%; margin: 0 auto;">
                    <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
                        <div class="form-group ">
                            <input class="form-control " type="text " name="name" value="<%= campground.name%>">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="number" name="price" value="<%= campground.price%>" min="2.5" step="0.1">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="image" value="<%= campground.image%>">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="description" value="<%= campground.description %>">
                        </div>


                        <button class="btn btn-large btn-primary btn-block">Edit</button>
                    </form>
                    <a href="/campgrounds">Go Back</a>
                </div>


            </div>

        </div>
    </div>





    <%- include ("../partials/footer")%>