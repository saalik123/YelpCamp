<%- include ("../partials/header")%>

    <div class="container">
        <div class="row">
            <div style="margin: 0 auto">
                <h1 class="mt-2">Create New Campground</h1>
                <div class="mt-5" style="width: 70%; margin: 0 auto;">
                    <form action="/campgrounds" method="POST">
                        <div class="form-group">
                            <input class="form-control" type="text" name="name" placeholder="name">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="number" name="price" placeholder="price" min="2.5" step="0.1">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="image" placeholder="image url">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="description" placeholder="description">
                        </div>


                        <button class="btn btn-large btn-primary btn-block">Submit</button>
                    </form>
                    <a href="/campgrounds">Go Back</a>
                </div>


            </div>

        </div>
    </div>





    <%- include ("../partials/footer")%>